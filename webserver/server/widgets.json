      "on": "On"
    },
    "height": {
      "displayName": "Height",
      "defaultValue": "300",
      "type": "Number"
    },
    "width": {
      "displayName": "Width",
      "defaultValue": "300",
      "type": "Number"
    },
    "backgroundColor": {
      "displayName": "Background Color",
      "defaultValue": "rgba(255, 255, 255, 1)",
      "type": "Color"
    },
    "background": {
      "displayName": "Backgroud Image",
      "type": "Background"
    },
    "foregroundColor": {
      "displayName": "Foreground Color",
      "defaultValue": "rgba(0, 0, 0, 1)",
      "type": "Color"
    },
    "fontSize": {
      "displayName": "Font Size",
      "defaultValue": "24",
      "type": "Number"
    },
    "borderWidth": {
      "displayName": "Border Width",
      "defaultValue": "0",
      "type": "Number"
    },
    "borderColor": {
      "displayName": "Border Color",
      "defaultValue": "rgba(0, 0, 0, 1)",
      "type": "Color",
      "condition": "$borderWidth > 0"
    },
    "borderRadius": {
      "displayName": "Border Radius",
      "defaultValue": "0",
      "type": "Number",
      "condition": "$borderWidth > 0"
    }
  },
