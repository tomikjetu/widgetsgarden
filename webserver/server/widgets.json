      "options": [
        {
          "key": 0,
          "value": 0,
          "text": "In Text"
        },
        {
          "key": 1,
          "value": 1,
          "text": "Always on Top"
        }
      ]
    },
    "positionlock": {
      "displayName": "Lock Position",
      "defaultValue": "0",
