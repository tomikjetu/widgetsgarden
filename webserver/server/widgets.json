    "cookies-popup": {
      "scripts": ["/scripts/widgetsgarden-cookies.js", "/scripts/cookies-popup.js"],
      "displayName": "Cookies Popup",
      "description": "Let User know you're using cookies",
      "name": "cookies-popup",
      "cookies": ["widgetsgarden-cookies-accepted"],
      "displayOnLoad": false,
      "data": {
        "heading": {
          "displayName": "Heading",
          "type": "String",
          "defaultValue": "We Use Cookies 🍪"
        },
        "caption": {
          "displayName": "Caption",
          "type": "String",
          "defaultValue": "This Webiste uses cookies to ensure you get the best experience."
        },
        "learnMoreLink": {
          "displayName": "Learn More Link",
          "type": "String"
        }
      },
      "styleOverride": {
        "position": 1,
        "positionlock": "3",
        "width": "400",
        "height": "175",
        "borderWidth": "1",
        "borderRadius": "25",
        "fontSize": "16"
      }
    },
    "age-verification": {
      "scripts": ["/scripts/widgetsgarden-cookies.js", "/scripts/age-verification.js"],
      "displayName": "Age Verification",
      "description": "Don't allow young users on your page",
      "name": "age-verification",
      "cookies": ["widgetsgarden-age-verified"],
      "displayOnLoad": false,
      "data": {
        "heading": {
          "displayName": "Header",
          "type": "String",
          "defaultValue": "AGE VERIFICATION"
        },
        "caption": {
          "displayName": "Caption",
          "type": "String",
          "defaultValue": "You must be {AGE} to enter."
        },
        "min": {
          "displayName": "Minimal age",
          "defaultValue": "18",
          "type": "Number"
        },
        "askForAge": {
          "required": true,
          "displayName": "Ask For Age",
          "description": "Ask for Date of birth",
          "defaultValue": false,
          "type": "Switch",
          "off": "No",
          "on": "Yes"
        },
        "failMessage": {
          "displayName": "Fail Message",
          "defaultValue": "Sorry, You must be {AGE} to enter.",
          "type": "String",
          "condition": "$askForAge == true"
        },
        "redirect": {
          "displayName": "Exit Redirect",
          "defaultValue": "https://google.com",
          "type": "String"
        }
      },
